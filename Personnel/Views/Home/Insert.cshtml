@model DAL.Entity.Personnel
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <br />
                <label>Personel Adı</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required", maxlength = "10" })
            </div>
            <div class="form-group">
                <br />
                <label>Personel Soyadı</label>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", required = "required", maxlength = "10" })
            </div>


            <div class="form-group">

                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">

                <label>Telefon Numarası</label>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">

                <label>Ünvan</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">

                <label>Adres</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", required = "required" })
            </div>

            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </div>
}

